<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="#">Student Dashboard</a>
            <div class="navbar-nav ms-auto">
                <span class="nav-item nav-link">Welcome, <%= user.name %></span>
                <a class="nav-item nav-link" href="/logout">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <h1>Welcome to your Dashboard, <%= user.name %></h1>

        <h2 class="mt-4">Your Courses</h2>
        <ul class="list-group">
            <% courses.forEach(course => { %>
                <li class="list-group-item"><%= course.name %> - <%= course.code %></li>
            <% }) %>
        </ul>

        <h2 class="mt-4">Faculty</h2>
        <ul class="list-group">
            <% faculty.forEach(teacher => { %>
                <li class="list-group-item"><%= teacher.name %> - <%= teacher.email %></li>
            <% }) %>
        </ul>

        <h2 class="mt-4">Attendance</h2>
        <ul class="list-group">
            <% attendance.forEach(record => { %>
                <li class="list-group-item">
                    <%= record.date.toDateString() %> - <%= record.course.name %> - <%= record.status %>
                </li>
            <% }) %>
        </ul>

        <h2 class="mt-4">Timetable</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Time</th>
                    <th>Monday</th>
                    <th>Tuesday</th>
                    <th>Wednesday</th>
                    <th>Thursday</th>
                    <th>Friday</th>
                </tr>
            </thead>
            <tbody>
                <% if (timetable && timetable.schedule) { %>
                    <% timetable.schedule.forEach(slot => { %>
                        <tr>
                            <td><%= slot.time %></td>
                            <td><%= slot.monday || '-' %></td>
                            <td><%= slot.tuesday || '-' %></td>
                            <td><%= slot.wednesday || '-' %></td>
                            <td><%= slot.thursday || '-' %></td>
                            <td><%= slot.friday || '-' %></td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="6">No timetable available</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>